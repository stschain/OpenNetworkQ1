query ($network: PiNetwork!, $address: String!, $limit: Int = 10, $offset: Int = 0, $from: ISO8601DateTime, $till: ISO8601DateTime) {
  Pi(network: $network) {
    smartContractCalls(
      options: {desc: "block.timestamp.time", first: $limit, skip: $offset}
      date: {since: $from, till: $till}
      caller: {is: $address}
    ) {
      block {
        timestamp {
          time(format: "%Y-%m-%d %H:%M:%S")
        }
        height
      }
      smartContractMethod {
        name
        signatureHash
      }
      smartContract {
        address {
          address
          annotation
        }
      }
      transaction {
        hash
      }
      gasValue
      gas_value_usd: gasValue(in: USD)
      gas_value_idr: gasValue(in: IDR)
    }
  }
}
